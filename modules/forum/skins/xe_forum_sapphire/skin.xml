<?xml version="1.0" encoding="UTF-8"?>
<skin version="0.2">
	<title xml:lang="ko">XE Forum Sapphire</title>
	<title xml:lang="en">XE Forum Sapphire</title>
	<title xml:lang="zh-CN">XE Forum Sapphire</title>
    <description xml:lang="ko">
		The skin inherits from the XE sapphire layout, appending with apple style design, display a concise and clear forum.
    </description>
	<description xml:lang="en">
		The skin inherits from the XE sapphire layout, appending with apple style design, display a concise and clear forum.  
    </description>
	<description xml:lang="zh-CN">
        参考XE主网站的设计风格，沿用XE的蓝色色调，加入了苹果风格的设计，页面简洁，板块明确，注重内容的表现。
    </description>
    <version>1.0</version>
    <date>2011-8-16</date>

    <author email_address="developers@xpressengine.com" link="www.xpressengine.com">
		<name xml:lang="ko">developers@xpressengine.com</name>
		<name xml:lang="en">developers@xpressengine.com</name>
		<name xml:lang="zh-CN">developers@xpressengine.com</name>
    </author>

    <license>GPL</license>

    <colorset>
        <color name="blue" src="screenshot/">
			<title xml:lang="ko">Blue</title>
            <title xml:lang="en">Blue</title>
			<title xml:lang="zh-CN">Blue</title>
        </color>
    </colorset>

    <extra_vars>
        
        <var name="display_login_info" type="select">
            <title xml:lang="ko">Display Login Info</title>
			<title xml:lang="en">Display Login Info</title>
			<title xml:lang="zh-CN">显示登录信息</title>
            <options value="Y">
                <title xml:lang="ko">display</title>
				<title xml:lang="en">display</title>
				<title xml:lang="zh-CN">显示</title>
            </options>
            <options value="N">
                <title xml:lang="ko">not display</title>
				<title xml:lang="en">not display</title>
				<title xml:lang="zh-CN">不显示</title>
            </options>
            <description />
        </var>
        <var name="display_setup_button" type="select">
			<title xml:lang="ko">Display Setup</title>
            <title xml:lang="en">Display Setup</title>
			<title xml:lang="zh-CN">显示设置</title>
            <options value="Y">
                <title xml:lang="ko">display</title>
				<title xml:lang="en">display</title>
				<title xml:lang="zh-CN">显示</title>
            </options>
            <options value="N">
				<title xml:lang="ko">not display</title>
                <title xml:lang="en">not display</title>
				<title xml:lang="zh-CN">不显示</title>
            </options>
            <description />
        </var>
        <var name="subject_cut_size" type="text">
            <title xml:lang="ko">Length of Subject</title>
			<title xml:lang="en">Length of Subject</title>
			<title xml:lang="zh-CN">标题长度</title>
            <description xml:lang="ko">You may set length of title. (0 or blank value will not restrict the length)</description>
			<description xml:lang="en">You may set length of title. (0 or blank value will not restrict the length)</description>
			<description xml:lang="zh-CN">设置标题的长度. (0或空值，则标题不受长度限制)</description>
	
        </var>
        <var name="content_cut_size" type="text">
            <title xml:lang="ko">Length of Content</title>
			<title xml:lang="en">Length of Content</title>
			<title xml:lang="zh-CN">内容长度</title>
            <description xml:lang="ko">Length of Content can be assigned. (default 240)</description>
			<description xml:lang="en">Length of Content can be assigned. (default 240)</description>
			<description xml:lang="zh-CN">设置帖子内容长度 (默认240字节)</description>
